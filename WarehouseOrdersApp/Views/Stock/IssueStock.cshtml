@model WarehouseOrdersApp.Models.StockIssueViewModel

<h2>Warehouse issue</h2>

<form asp-action="IssueStock" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label>Order</label>
        <select asp-for="OrderId" asp-items="ViewBag.Orders">
            <option value="">Choose order</option>
        </select>
        <span asp-validation-for="OrderId"></span>
    </div>

    <div>
        <label>Product</label>
        <select asp-for="ProductId" asp-items="ViewBag.Products">
            <option value="">Choose product</option>
        </select>
        <span asp-validation-for="ProductId"></span>
    </div>

    <div>
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" min="1" />
        <span asp-validation-for="Quantity"></span>
    </div>

    <button type="submit">Issue from warehouse</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

